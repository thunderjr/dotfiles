# Maokai CD
mcd() {
    local selected=$(maokai | gum choose)
    if [ -n "$selected" ]; then
        local branch=$(echo "$selected" | sed 's/.* - \([^(]*\) .*/\1/' | xargs)
        local path=$(maokai path "$branch")
        if [ -n "$path" ]; then
            cd "$path"
        fi
    fi
}

